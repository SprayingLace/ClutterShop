<div class="product-variants">
  {% if product.variants %}
    <form id="variants-form">
      {% for variant in product.variants %}
        <div class="variant-item">
          <label for="{{ variant.name }}">{{ variant.name }}</label>

          {% if variant.type == "select" %}
            <select name="{{ variant.name }}" id="{{ variant.name }}">
              {% for option in variant.options %}
                <option value="{{ option }}">{{ option }}</option>
              {% endfor %}
            </select>

          {% elseif variant.type == "number" %}
            <div class="quantity-input">
              <button type="button" class="quantity-btn" data-action="decrement">-</button>
              <input type="number" name="{{ variant.name }}" id="{{ variant.name }}" min="{{ variant.min }}" max="{{ variant.max }}" value="{{ variant.min }}">
              <button type="button" class="quantity-btn" data-action="increment">+</button>
            </div>

          {% elseif variant.type == "text" %}
            <input type="text" name="{{ variant.name }}" id="{{ variant.name }}" placeholder="Enter {{ variant.name }}">
          {% endif %}
        </div>
      {% endfor %}
    </form>
  {% else %}
    <p>No variants available for this product.</p>
  {% endif %}
</div>
